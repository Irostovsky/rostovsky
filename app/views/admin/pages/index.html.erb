<%= link_to 'New page', new_admin_page_path %>

<table>
	<tr>
		<th>code</th>
		<th>Visible</th>
		<th>Title</th>
		<th>Edit</th>
		<th>Delete</th>
		<th>Move</th>
	</tr>
	<% @pages.each do |page| %>
		<tr>
			<td><%= page.code %></td>
			<td><%= page.visible %></td>
			<td><%= page.title %></td>
			<td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
			<td><%= link_to 'Destroy', admin_page_path(page), :method => :delete, :confirm => 'Are you sure?' %></td>
			<td>
				<%= link_to 'Up', admin_page_change_position_path(page, 'up'), :method => :put %>
				<%= link_to 'Down', admin_page_change_position_path(page, 'down'), :method => :put %>
			</td>
		</tr>
	<% end -%>
</table>