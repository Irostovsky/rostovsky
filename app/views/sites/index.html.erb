<div class='public_sites'>
	<% @sites.each do |site| %>
		<div class='public_site'>
			<%= link_to site.url, url_with_http(site.url), :popup => true %>
			<%= content_tag :div, site.title %>
			<% single_line_container do %>
				<div class="site_gallery spacegallery">
					<% site.photos.each do |photo| %>
						<%= image_tag photo.avatar(:big) %>
					<% end -%>
				</div>
				<%= content_tag :div, textilize(site.description) %>
			<% end -%>
			
		</div>
	<% end -%>
</div>